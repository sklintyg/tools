DirectoryIndex index.php index.html

{# Set up VirtualHosts #}
{% for vhost in apache_vhosts %}
<VirtualHost *:80>
  ServerName {{ vhost.servername }}
{% if vhost.documentroot is defined %}
  DocumentRoot {{ vhost.documentroot }}
{% endif %}
{% if vhost.documentroot is defined %}
  <Directory "{{ vhost.documentroot }}">
    AllowOverride All
    Options -Indexes +FollowSymLinks
    Order allow,deny
    Allow from all
  </Directory>
{% endif %}

  <Proxy balancer://http_balancer>
  #Tomcat-nodes (from tomcat-group in host-file)
{% for host in groups.tomcat %}
{% if domain == hostvars[host]['domain'] %}
    #Ansible-host: {{ host }}
    BalancerMember http://127.0.0.1:{{ hostvars[host].tomcat_https_port }}
{% endif %}
{% endfor %}
    ProxySet lbmethod=byrequests
  </Proxy>

  ProxyPass /balance-manager !
  ProxyPass / balancer://http_balancer/ stickysession=JSESSIONID|jsessionid
  ProxyPassReverse / balancer://http_balancer/

{% if vhost.extra_parameters is defined %}
  {{ vhost.extra_parameters }}
{% endif %}
</VirtualHost>

{% endfor %}

{# Set up SSL VirtualHosts #}
{% for vhost in apache_vhosts_ssl %}
{% if apache_ssl_certificates.results[loop.index0].stat.exists %}
<VirtualHost *:443>
  ServerName {{ vhost.servername }}
{% if vhost.documentroot is defined %}
  DocumentRoot {{ vhost.documentroot }}
{% endif %}

  SSLEngine on
  SSLProxyEngine on
  SSLCipherSuite {{ apache_ssl_cipher_suite }}
  SSLProtocol {{ apache_ssl_protocol }}
  SSLHonorCipherOrder On
  SSLCertificateFile {{ vhost.certificate_file }}
  SSLCertificateKeyFile {{ vhost.certificate_key_file }}
{% if vhost.certificate_chain_file is defined %}
  SSLCertificateChainFile {{ vhost.certificate_chain_file }}
{% endif %}

{% if vhost.documentroot is defined %}
  <Directory "{{ vhost.documentroot }}">
    AllowOverride All
    Options -Indexes +FollowSymLinks
    Order allow,deny
    Allow from all
  </Directory>
{% endif %}

  <Proxy balancer://https_balancer>
  #Tomcat-nodes (from tomcat-group in host-file)
{% for host in groups.tomcat %}
{% if domain == hostvars[host]['domain'] %}
    #Ansible-host: {{ host }}
    BalancerMember https://127.0.0.1:{{ hostvars[host].tomcat_https_port }}
{% endif %}
{% endfor %}
    ProxySet lbmethod=byrequests
  </Proxy>

  ProxyPass /balance-manager !
  ProxyPass / balancer://https_balancer/ stickysession=JSESSIONID|jsessionid
  ProxyPassReverse / balancer://https_balancer/

{% if vhost.extra_parameters is defined %}
  {{ vhost.extra_parameters }}
{% endif %}
</VirtualHost>

{% endif %}
{% endfor %}
